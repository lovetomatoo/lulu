<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ghx.app">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name = "android.hardware.camera" />

    <application
        android:name=".base.FrameApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--Splash 页面____开始-->
        <activity android:name=".lulu.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--Splash 页面____结束-->

        <!--Guide 页面____开始-->
        <activity android:name=".lulu.activity.GuideActivity"
            android:screenOrientation="portrait"/>
        <!--Guide 页面____结束-->

        <!--MainActivity 主页面____开始-->
        <activity
            android:name=".lulu.activity.MainActivity"
            android:screenOrientation="portrait"/>
        <!--MainActivity 主页面____结束-->


    </application>

</manifest>