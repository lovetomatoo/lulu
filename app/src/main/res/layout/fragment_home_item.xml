<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ghx.app.lulu.weiget.pullloadmore_recyleview.RecyclerViewHeader
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/rv_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.ghx.app.lulu.weiget.autoscroll_viewpager.AutoScrollViewPager
            android:id="@+id/vp_auto"
            android:layout_width="match_parent"
            android:layout_height="180dp" />

    </com.ghx.app.lulu.weiget.pullloadmore_recyleview.RecyclerViewHeader>

    <com.ghx.app.lulu.weiget.pullloadmore_recyleview.PullLoadMoreRecyclerView
        android:id="@+id/rv_pull_load_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</FrameLayout>